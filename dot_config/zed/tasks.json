[
  {
    "label": "pnpm: development server",
    "command": "pnpm",
    "args": ["run", "dev"],
    "use_new_terminal": true,
    "reveal": "never"
  },
  {
    "label": "docker: start compose project",
    "command": "docker",
    "args": ["compose", "up", "--remove-orphans", "--wait"],
    "reveal": "never",
    "use_new_terminal": false
  },
  {
    "label": "docker: stop compose project",
    "command": "docker",
    "args": ["compose", "down"],
    "reveal": "never",
    "use_new_terminal": false
  },
  {
    "label": "git : stage all",
    "command": "git add .",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "git : commit",
    "command": "EDITOR=zed git commit",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Open lazygit",
    "command": "lazygit",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always"
  }
]