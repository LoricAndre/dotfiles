  {
    "label": "docker: start compose project",
    "command": "docker",
    "args": ["compose", "up", "--remove-orphans", "--wait"],
    "reveal": "never",
    "use_new_terminal": false
  },
  {
    "label": "docker: stop compose project",
    "command": "docker",
    "args": ["compose", "down"],
    "reveal": "never",
    "use_new_terminal": false
  },
  {
    "label": "git : stage all",
    "command": "git add .",
    // "use_new_terminal": true,
    // "allow_concurrent_runs": false,
    "reveal": "never"
  },
  {
    "label": "git : stage $ZED_RELATIVE_FILE",
    "command": "git add $ZED_RELATIVE_FILE",
    // "use_new_terminal": true,
    // "allow_concurrent_runs": false,
    "reveal": "never"
  },
  {
    "label": "git : show status",
    "command": "git status",
    // "use_new_terminal": true,
    // "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "git : commit",
    "command": "VISUAL='zed --wait' git commit",
    "env": {
      "VISUAL": "zed --wait" // NOT WORKING RN
    },
    // "use_new_terminal": true,
    // "allow_concurrent_runs": false,
    "reveal": "never"
  },
  {
    "label": "git : push",
    "command": "git push",
    // "use_new_terminal": true,
    // "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "git : pull",
    "command": "git pull",
    // "use_new_terminal": true,
    // "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Open lazygit",
    "command": "lazygit",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always"
  }
