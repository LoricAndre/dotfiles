export XCURSOR_PATH="$XCURSOR_PATH"
export XINITRC="$XINITRC"
export _JAVA_OPTIONS=-Djava.util.prefs.userRoot="$_JAVA_OPTIONS=-Djava.util.prefs.userRoot"
