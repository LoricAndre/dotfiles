[
  {
    "bindings": {
      "shift-enter": [
        "picker::ConfirmInput",
        {
          "secondary": true
        }
      ],
      "ctrl-q": "pane::CloseActiveItem",
      "alt-q": "pane::CloseActiveItem",
      "ctrl-shift-q": "pane::CloseAllItems",
      "alt-shift-q": "pane::CloseAllItems",
      "alt-enter": [
        "picker::ConfirmInput",
        {
          "secondary": false
        }
      ],
      "ctrl-alt-enter": [
        "picker::ConfirmInput",
        {
          "secondary": true
        }
      ],
      "ctrl-t": "terminal_panel::ToggleFocus",
      "ctrl-shift-t": "workspace::NewTerminal",
      "alt-j": "workspace::ActivatePaneLeft",
      "alt-m": "workspace::ActivatePaneRight",
      "alt-l": "workspace::ActivatePaneUp",
      "alt-k": "workspace::ActivatePaneDown",
      "ctrl-space": [
        "projects::OpenRecent",
        {
          "create_new_window": true
        }
      ]
    }
  },
  {
    "context": "(Editor && vim_mode == normal) || EmptyPane || SharedScreen",
    "bindings": {
      "g c c": "editor::ToggleComments",
      "space q": "pane::CloseActiveItem",
      "space g b": "git::Branch",
      "space g d": "git::Diff",
      "space g r": "git::Restore",
      "space g l": "git::Blame",
      "space g a": "git::Add",
      "space g s": "git::StageFile",
      "space g S": "git::StageAll",
      "space g z": [
        "task::Spawn",
        {
          "task_name": "git: lazygit"
        }
      ],
      "space g g": "git_panel::ToggleFocus",
      "space g c": "git::Commit",
      "space g shift-p": "git::Push",
      "space g p": "git::Pull",
      "g d": "editor::GoToDefinition",
      "g shift-d": "editor::GoToDefinitionSplit",
      "g r": "editor::FindAllReferences",
      "g n": "editor::Rename",
      "g s": "project_symbols::Toggle",
      "g k": "editor::GoToDiagnostic",
      "ctrl-l": "editor::AddSelectionAbove",
      "ctrl-k": "editor::AddSelectionBelow",
      "ctrl-shift-space": [
        "projects::OpenRecent",
        {
          "create_new_window": true
        }
      ],
      "space r": "task::Spawn",
      "space s": "workspace::NewSearch",
      "space e": "project_panel::ToggleFocus",
      "shift-y": ["workspace::SendKeystrokes", "y $"],
      "tab": "pane::ActivateNextItem",
      "shift-tab": "pane::ActivatePreviousItem"
    }
  },
  {
    // Normal or visual mode
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      "space f": "file_finder::Toggle",
      "space a": "agent::ToggleFocus",
      "space space": ["workspace::SendKeystrokes", "ctrl-tab enter"],
      "space z": "workspace::ToggleZoom",
      "j": "vim::Left",
      "k": "vim::Down",
      "l": "vim::Up",
      "m": "vim::Right",
      "g d": "editor::GoToDefinition",
      "g f": "editor::Format",
      "g shift-d": "editor::GoToTypeDefinition",
      "g l": "editor::GoToPreviousDiagnostic",
      "space o": "outline_panel::ToggleFocus",
      "space m": "search::SelectNextMatch",
      "g j": "vim::SelectPrevious",
      "g m": "vim::SelectNext",
      ">": "editor::Indent",
      "<": "editor::Outdent",
      "g shift-a": "editor::SelectAllMatches",
      "g s": "outline::Toggle",
      "g shift-s": "project_symbols::Toggle",
      "g a": "editor::ToggleCodeActions", // zed specific
      "g r": "editor::FindAllReferences", // zed specific
      "g space": "editor::OpenExcerpts" // zed specific
    }
  },
  {
    "context": "FileFinder || (FileFinder > Picker > Editor)",
    "bindings": {
      "ctrl-v": "menu::SecondaryConfirm" // vertical split
    }
  },
  {
    "context": "GitDiff > Editor",
    "bindings": {
      "space g s": "git::StageAndNext",
      "space g a": "git::StageAll",
      "space g u": "git::UnstageAndNext"
    }
  },
  {
    "context": "GitPanel && ChangesList",
    "bindings": {
      "a": "git::StageAll",
      "shift-a": "git::UnstageAll",
      "c": "git_panel::FocusEditor",
      "p": "git::Pull",
      "shift-p": "git::Push",
      "f": "git::Fetch",
      "k": "menu::SelectNext",
      "l": "menu::SelectPrevious",
      "alt-k": "git_panel::FocusEditor"
    }
  },
  {
    "context": "(GitCommit > Editor) || (GitPanel > Editor)",
    "bindings": {
      "enter": "git::Commit",
      "ctrl-enter": "editor::Newline",
      "ctrl-s": "git::Push",
      "ctrl-l": "git::Pull",
      "ctrl-g": "git::GenerateCommitMessage"
    }
  },
  {
    "context": "GitPanel > Editor",
    "bindings": {
      "alt-l": "git_panel::FocusChanges"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      // "ctrl-alt-space": "terminal::ShowCharacterPalette",
      "shift-ctrl-c": "terminal::Copy",
      "shift-ctrl-v": "terminal::Paste",
      "up": ["terminal::SendKeystroke", "up"],
      "pageup": ["terminal::SendKeystroke", "pageup"],
      "down": ["terminal::SendKeystroke", "down"],
      "pagedown": ["terminal::SendKeystroke", "pagedown"],
      "escape": ["terminal::SendKeystroke", "escape"],
      "enter": ["terminal::SendKeystroke", "enter"],
      "ctrl-c": ["terminal::SendKeystroke", "ctrl-c"],
      "ctrl-shift-d": "pane::CloseActiveItem",
      "ctrl-w": ["terminal::SendKeystroke", "ctrl-w"],
      "ctrl-a": ["terminal::SendKeystroke", "ctrl-a"],
      "alt-enter": ["terminal::SendKeystroke", "alt-enter"]
    }
  },
  {
    // netrw compatibility
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "a": "project_panel::NewFile",
      "r": "project_panel::Rename",
      "shift-a": "project_panel::NewDirectory",
      "escape": "project_panel::ToggleFocus",
      "j": "project_panel::CollapseSelectedEntry",
      "k": "menu::SelectNext",
      "l": "menu::SelectPrevious",
      "m": "project_panel::ExpandSelectedEntry",
      "d": "project_panel::Delete",
      "x": "project_panel::Cut",
      "y": "project_panel::Copy",
      "p": "project_panel::Paste",
      "n": "project_panel::Duplicate"
    }
  }
]
